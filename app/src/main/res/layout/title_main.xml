<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#2f8ae8">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:civ_border_color="#f0f0f0"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="12.5dp"
        android:paddingRight="12.5dp"
        android:text="返回"
        android:textColor="#fff"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="15dp"
         />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_half_corner"
        android:visibility="gone"
        app:tabBackground="@drawable/selector_tab_layout"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabTextColor="@color/selector_transport_tablayout">

        <!--<android.support.design.widget.TabItem-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center"-->
        <!--android:text="今日任务" />-->

        <!--<android.support.design.widget.TabItem-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="预定任务" />-->
    </android.support.design.widget.TabLayout>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="4dp"
        android:drawableRight="@mipmap/ic_launcher"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="12.5dp"
        android:paddingRight="12.5dp"
        android:text="筛选"
        android:textColor="@color/selector_filter_text"
        android:textSize="14sp" />

    <!--<ImageView-->
    <!--android:id="@+id/iv_service"-->
